<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>
<%= link_to 'Export to Quickbooks', payments_path(format: :iif) %>
<table>
  <thead>
    <tr>
      <th>Payer first name</th>
      <th>Paid at</th>
      <th>Reason</th>
      <th>Amount</th>
      <th>Method</th>
      <th>Status</th>
      <th>Check number</th>
      <th>Payable</th>
      <th>Payable type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payer_first_name %></td>
        <td><%= payment.paid_at %></td>
        <td><%= payment.reason %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.method %></td>
        <td><%= payment.status %></td>
        <td><%= payment.check_number %></td>
        <td><%= payment.payable_id %></td>
        <td><%= payment.payable_type %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

